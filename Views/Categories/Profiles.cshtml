@model IEnumerable<finder_work.Models.UserProfile>

@{
    ViewData["Title"] = $"Hồ sơ - {ViewBag.CategoryName}";
    var category = ViewBag.Category as finder_work.Models.Category;
    var categoryName = ViewBag.CategoryName as string;
    var categoryId = ViewBag.CategoryId;
    var currentPage = ViewBag.CurrentPage ?? 1;
    var totalPages = ViewBag.TotalPages ?? 1;
    var totalProfiles = ViewBag.TotalProfiles ?? 0;
}

<div class="container py-5">
    <!-- Header -->
    <div class="row mb-5">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Trang chủ</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Categories")">Nhóm ngành nghề</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@categoryName</li>
                </ol>
            </nav>
            
            <div class="d-flex align-items-center mb-4">
                <div class="me-3">
                    <i class="bi bi-folder-fill text-primary" style="font-size: 2.5rem;"></i>
                </div>
                <div>
                    <h1 class="h2 fw-bold mb-1">@categoryName</h1>
                    <p class="text-muted mb-0">
                        @if (category?.CategoryDescription != null)
                        {
                            @category.CategoryDescription
                        }
                        else
                        {
                            <text>Khám phá hồ sơ ứng viên trong lĩnh vực @categoryName</text>
                        }
                    </p>
                </div>
            </div>
            
            @if (totalProfiles > 0)
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle me-2"></i>
                    Tìm thấy <strong>@totalProfiles</strong> hồ sơ ứng viên trong lĩnh vực <strong>@categoryName</strong>
                </div>
            }
        </div>
    </div>

    <!-- Profiles Grid -->
    <div class="row" id="profilesContainer">
        <partial name="_CategoryProfiles" model="Model" />
    </div>
</div>

@section Scripts {
<script>
function loadCategoryProfiles(page = 1) {
    // Show loading indicator
    $('#profilesContainer').html('<div class="col-12 text-center"><div class="spinner-border text-primary" role="status"><span class="visually-hidden">Đang tải...</span></div></div>');
    
    $.get('/Categories/GetCategoryProfiles', { id: @ViewBag.CategoryId, page: page }, function(data) {
        $('#profilesContainer').html(data);
        
        // Bind pagination events
        bindPaginationEvents();
        
        // Update URL without page reload
        var newUrl = '@Url.Action("Profiles", "Categories", new { id = ViewBag.CategoryId, categoryName = ViewBag.CategoryName })';
        if (page > 1) {
            newUrl += '?page=' + page;
        }
        window.history.pushState({page: page}, '', newUrl);
    }).fail(function() {
        $('#profilesContainer').html('<div class="col-12 text-center"><p class="text-muted">Không thể tải hồ sơ</p></div>');
    });
}

function bindPaginationEvents() {
    // Handle pagination clicks
    $('.pagination .page-link').off('click').on('click', function(e) {
        e.preventDefault();
        
        var $this = $(this);
        var page = $this.data('page');
        
        // Don't do anything if disabled or current page
        if ($this.parent().hasClass('disabled') || $this.parent().hasClass('active')) {
            return;
        }
        
        if (page && page > 0) {
            loadCategoryProfiles(page);
        }
    });
}

// Handle browser back/forward buttons
window.addEventListener('popstate', function(event) {
    var page = event.state ? event.state.page : 1;
    loadCategoryProfiles(page);
});

$(document).ready(function() {
    // Bind initial pagination events
    bindPaginationEvents();
    
    // Check if there's a page parameter in URL
    var urlParams = new URLSearchParams(window.location.search);
    var currentPage = parseInt(urlParams.get('page')) || @currentPage;
    
    if (currentPage > 1) {
        // Set initial state for browser history
        window.history.replaceState({page: currentPage}, '', window.location.href);
    }
});
</script>
}