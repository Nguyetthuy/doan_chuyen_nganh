@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Nhóm ngành nghề";
}

<div class="container py-5">
    <div class="row mb-5">
        <div class="col-12">
            <div class="d-flex align-items-center mb-4">
                <div class="me-3">
                    <i class="bi bi-grid-3x3-gap text-primary" style="font-size: 2.5rem;"></i>
                </div>
                <div>
                    <h1 class="h2 fw-bold mb-1">Nhóm ngành nghề</h1>
                    <p class="text-muted mb-0">Khám phá hồ sơ ứng viên theo từng lĩnh vực chuyên môn</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        @if (Model != null && Model.Any())
        {
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card category-card h-100 border-0 shadow-sm">
                        <div class="card-body p-4">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <div class="category-icon">
                                    <i class="bi bi-folder-fill text-primary fs-1"></i>
                                </div>
                                <div class="text-end">
                                    <span class="badge bg-primary rounded-pill fs-6">
                                        @item.ProfileCount
                                    </span>
                                </div>
                            </div>
                            
                            <h5 class="card-title fw-bold mb-2">@item.Category.CategoryName</h5>
                            
                            @if (!string.IsNullOrEmpty(item.Category.CategoryDescription))
                            {
                                <p class="card-text text-muted mb-3">@item.Category.CategoryDescription</p>
                            }
                            
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted">
                                    @item.ProfileCount hồ sơ có sẵn
                                </small>
                                <a href="@Url.Action("Profiles", "Categories", new { id = item.Category.CategoryId, categoryName = item.Category.CategoryName })" 
                                   class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-arrow-right me-1"></i>Xem hồ sơ
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center py-5">
                <div class="text-muted">
                    <i class="bi bi-folder-x display-1 mb-3"></i>
                    <h4>Chưa có danh mục nào có hồ sơ</h4>
                    <p>Hãy quay lại sau để xem các danh mục mới nhất.</p>
                </div>
            </div>
        }
    </div>

    <div class="row mt-4">
        <div class="col-12 text-center">
            <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">
                <i class="bi bi-house me-2"></i>Quay lại trang chủ
            </a>
        </div>
    </div>
</div>

<style>
.category-card .card {
    transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
}

.category-card .card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 25px rgba(0,0,0,0.15) !important;
}

.category-icon {
    opacity: 0.8;
}

.category-card:hover .category-icon {
    opacity: 1;
}
</style>