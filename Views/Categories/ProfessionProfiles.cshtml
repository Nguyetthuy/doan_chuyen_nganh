@model IEnumerable<finder_work.Models.UserProfile>
@{
    ViewData["Title"] = $"Hồ sơ - {ViewBag.ProfessionName}";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2><i class="bi bi-briefcase me-2"></i>@ViewBag.ProfessionName</h2>
                    <p class="text-muted mb-0">
                        <span class="badge bg-secondary me-2">@ViewBag.CategoryName</span>
                        Tìm thấy <strong>@Model.Count()</strong> hồ sơ cho nghề nghiệp này
                    </p>
                </div>
            </div>

            <!-- Breadcrumb -->
            <nav aria-label="breadcrumb" class="mb-4">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Index", "Home")">Trang chủ</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Index")">Nhóm ngành</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="#">@ViewBag.CategoryName</a>
                    </li>
                    <li class="breadcrumb-item active">@ViewBag.ProfessionName</li>
                </ol>
            </nav>

            <!-- Profiles List -->
            @if (Model.Any())
            {
                <div class="row">
                    @foreach (var profile in Model)
                    {
                        <div class="col-md-6 col-lg-4 mb-4">
                            <div class="card h-100">
                                <div class="card-body">
                                    <div class="d-flex align-items-center mb-3">
                                        <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center me-3" 
                                             style="width: 50px; height: 50px;">
                                            <i class="bi bi-person-fill text-white"></i>
                                        </div>
                                        <div>
                                            <h6 class="card-title mb-1">@profile.User.FullName</h6>
                                            <small class="text-muted">@profile.Location</small>
                                        </div>
                                    </div>

                                    @if (!string.IsNullOrEmpty(profile.Summary))
                                    {
                                        <p class="card-text text-muted small">
                                            @(profile.Summary.Length > 100 ? profile.Summary.Substring(0, 100) + "..." : profile.Summary)
                                        </p>
                                    }

                                    <!-- Professions -->
                                    @if (profile.UserProfileProfessions.Any())
                                    {
                                        <div class="mb-2">
                                            <small class="text-muted d-block">Nghề nghiệp:</small>
                                            @foreach (var upp in profile.UserProfileProfessions.Take(2))
                                            {
                                                <span class="badge bg-light text-dark border me-1">@upp.Profession.ProfessionName</span>
                                            }
                                            @if (profile.UserProfileProfessions.Count > 2)
                                            {
                                                <span class="badge bg-secondary">+@(profile.UserProfileProfessions.Count - 2)</span>
                                            }
                                        </div>
                                    }

                                    <!-- Skills -->
                                    @if (profile.UserProfileSkills.Any())
                                    {
                                        <div class="mb-3">
                                            <small class="text-muted d-block">Kỹ năng:</small>
                                            @foreach (var ups in profile.UserProfileSkills.Take(3))
                                            {
                                                <span class="badge bg-info text-dark me-1">@ups.Skill.SkillName</span>
                                            }
                                            @if (profile.UserProfileSkills.Count > 3)
                                            {
                                                <span class="badge bg-secondary">+@(profile.UserProfileSkills.Count - 3)</span>
                                            }
                                        </div>
                                    }

                                    <!-- Salary -->
                                    @if (profile.ExpectedSalary.HasValue)
                                    {
                                        <div class="mb-2">
                                            <small class="text-success">
                                                <i class="bi bi-currency-dollar me-1"></i>
                                                @profile.ExpectedSalary.Value.ToString("N0") VND
                                            </small>
                                        </div>
                                    }

                                    <small class="text-muted">
                                        <i class="bi bi-clock me-1"></i>
                                        Cập nhật: @profile.UpdatedDate.ToString("dd/MM/yyyy")
                                    </small>
                                </div>
                                <div class="card-footer bg-transparent">
                                    <button class="btn btn-primary btn-sm w-100">
                                        <i class="bi bi-eye me-1"></i>Xem hồ sơ
                                    </button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-person-x display-1 text-muted"></i>
                    <h4 class="mt-3">Chưa có hồ sơ nào</h4>
                    <p class="text-muted">Hiện tại chưa có hồ sơ nào cho nghề nghiệp "@ViewBag.ProfessionName"</p>
                </div>
            }
        </div>
    </div>
</div>