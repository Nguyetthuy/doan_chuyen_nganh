@model IEnumerable<finder_work.Models.Profession>
@{
    ViewData["Title"] = $"Nghề nghiệp - {ViewBag.CategoryName}";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2><i class="bi bi-list-ul me-2"></i>Nghề nghiệp - @ViewBag.CategoryName</h2>
                    <p class="text-muted mb-0">
                        Có <strong>@Model.Count()</strong> nghề nghiệp trong nhóm ngành này
                    </p>
                </div>
                <div>
                    <a href="@Url.Action("Profiles", new { id = ViewBag.CategoryId })" 
                       class="btn btn-outline-primary">
                        <i class="bi bi-people me-1"></i>Xem tất cả hồ sơ
                    </a>
                </div>
            </div>

            <!-- Breadcrumb -->
            <nav aria-label="breadcrumb" class="mb-4">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Index", "Home")">Trang chủ</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Index")">Nhóm ngành</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Profiles", new { id = ViewBag.CategoryId })">@ViewBag.CategoryName</a>
                    </li>
                    <li class="breadcrumb-item active">Nghề nghiệp</li>
                </ol>
            </nav>

            <!-- Professions List -->
            @if (Model.Any())
            {
                <div class="row">
                    @foreach (var profession in Model)
                    {
                        <div class="col-md-6 col-lg-4 mb-4">
                            <div class="card h-100">
                                <div class="card-body">
                                    <div class="d-flex align-items-center mb-3">
                                        <div class="bg-success rounded-circle d-flex align-items-center justify-content-center me-3" 
                                             style="width: 50px; height: 50px;">
                                            <i class="bi bi-briefcase-fill text-white"></i>
                                        </div>
                                        <div class="flex-grow-1">
                                            <h6 class="card-title mb-1">@profession.ProfessionName</h6>
                                            <small class="text-muted">@ViewBag.CategoryName</small>
                                        </div>
                                    </div>

                                    @if (!string.IsNullOrEmpty(profession.ProfessionDescription))
                                    {
                                        <p class="card-text text-muted small">
                                            @(profession.ProfessionDescription.Length > 100 ? 
                                              profession.ProfessionDescription.Substring(0, 100) + "..." : 
                                              profession.ProfessionDescription)
                                        </p>
                                    }

                                    <div class="d-flex justify-content-between align-items-center">
                                        <span class="badge bg-primary">
                                            <i class="bi bi-people me-1"></i>
                                            @profession.UserProfileProfessions.Count hồ sơ
                                        </span>
                                        <small class="text-muted">
                                            ID: @profession.ProfessionId
                                        </small>
                                    </div>
                                </div>
                                <div class="card-footer bg-transparent">
                                    <a href="@Url.Action("ProfessionProfiles", new { id = profession.ProfessionId })" 
                                       class="btn btn-success btn-sm w-100">
                                        <i class="bi bi-eye me-1"></i>Xem hồ sơ nghề này
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-briefcase-x display-1 text-muted"></i>
                    <h4 class="mt-3">Chưa có nghề nghiệp nào</h4>
                    <p class="text-muted">Hiện tại chưa có nghề nghiệp nào trong nhóm ngành "@ViewBag.CategoryName"</p>
                </div>
            }
        </div>
    </div>
</div>