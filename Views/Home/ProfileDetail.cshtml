@model finder_work.Models.UserProfile
@{
    ViewData["Title"] = $"Hồ sơ - {Model.User?.FullName}";
}

<div class="container py-5">
    <div class="row">
        <!-- Profile Header -->
        <div class="col-12 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <div class="row align-items-center">
                        <div class="col-auto">
                            @if (!string.IsNullOrEmpty(Model.User?.Avata))
                            {
                                <img src="@Model.User.Avata" alt="@Model.User.FullName" 
                                     class="rounded-circle border" width="100" height="100" style="object-fit: cover;">
                            }
                            else
                            {
                                <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center text-white fw-bold" 
                                     style="width: 100px; height: 100px; font-size: 2.5rem;">
                                    @(Model.User?.FullName?.FirstOrDefault().ToString().ToUpper() ?? "U")
                                </div>
                            }
                        </div>
                        <div class="col">
                            <h1 class="h2 mb-2">@Model.User?.FullName</h1>
                            <div class="row">
                                <div class="col-md-6">
                                    <p class="text-muted mb-1">
                                        <i class="bi bi-envelope me-2"></i>@Model.User?.Email
                                    </p>
                                    @if (!string.IsNullOrEmpty(Model.User?.PhoneNumber))
                                    {
                                        <p class="text-muted mb-1">
                                            <i class="bi bi-telephone me-2"></i>@Model.User.PhoneNumber
                                        </p>
                                    }
                                </div>
                                <div class="col-md-6">
                                    <p class="text-muted mb-1">
                                        <i class="bi bi-geo-alt me-2"></i>@Model.Location
                                    </p>
                                    @if (Model.ExpectedSalary.HasValue)
                                    {
                                        <p class="text-success mb-1 fw-bold">
                                            <i class="bi bi-currency-dollar me-2"></i>@Model.ExpectedSalary.Value.ToString("N0") VND
                                        </p>
                                    }
                                </div>
                            </div>
                            <div class="mt-2">
                                <span class="badge bg-success">
                                    <i class="bi bi-check-circle me-1"></i>Hồ sơ đã được duyệt
                                </span>
                                <small class="text-muted ms-2">
                                    Cập nhật: @Model.UpdatedDate.ToString("dd/MM/yyyy")
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-lg-8">
            <!-- Summary -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white border-bottom">
                    <h5 class="mb-0">
                        <i class="bi bi-person-lines-fill me-2 text-primary"></i>Giới thiệu bản thân
                    </h5>
                </div>
                <div class="card-body">
                    <p class="mb-0">@Model.Summary</p>
                </div>
            </div>

            <!-- Work Experience -->
            @if (Model.WorkExperiences?.Any() == true)
            {
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white border-bottom">
                        <h5 class="mb-0">
                            <i class="bi bi-briefcase me-2 text-primary"></i>Kinh nghiệm làm việc
                        </h5>
                    </div>
                    <div class="card-body">
                        @foreach (var work in Model.WorkExperiences.OrderByDescending(w => w.StartDate))
                        {
                            <div class="experience-item @(work != Model.WorkExperiences.OrderByDescending(w => w.StartDate).Last() ? "border-bottom" : "") pb-3 mb-3">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <div>
                                        <h6 class="mb-1">@work.WorkName</h6>
                                        <p class="text-muted mb-1">@work.CompanyName</p>
                                    </div>
                                    <div class="text-end">
                                        <small class="text-muted">
                                            @work.StartDate?.ToString("MM/yyyy") - @(work.EndDate?.ToString("MM/yyyy") ?? "Hiện tại")
                                        </small>
                                        @if (work.WorkType != null)
                                        {
                                            <br><span class="badge bg-light text-dark">@work.WorkType.WorkTypeName</span>
                                        }
                                    </div>
                                </div>
                                @if (!string.IsNullOrEmpty(work.WorkDescription))
                                {
                                    <p class="text-muted mb-0">@work.WorkDescription</p>
                                }
                            </div>
                        }
                    </div>
                </div>
            }

            <!-- Education -->
            @if (Model.Degrees?.Any() == true)
            {
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white border-bottom">
                        <h5 class="mb-0">
                            <i class="bi bi-mortarboard me-2 text-primary"></i>Học vấn
                        </h5>
                    </div>
                    <div class="card-body">
                        @foreach (var degree in Model.Degrees.OrderByDescending(d => d.GraduationYear))
                        {
                            <div class="education-item @(degree != Model.Degrees.OrderByDescending(d => d.GraduationYear).Last() ? "border-bottom" : "") pb-3 mb-3">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <div>
                                        <h6 class="mb-1">@degree.DegreeName</h6>
                                        <p class="text-muted mb-1">@degree.SchoolName</p>
                                        @if (!string.IsNullOrEmpty(degree.Major))
                                        {
                                            <p class="text-muted mb-0"><strong>Chuyên ngành:</strong> @degree.Major</p>
                                        }
                                    </div>
                                    <div class="text-end">
                                        @if (degree.GraduationYear.HasValue)
                                        {
                                            <small class="text-muted">@degree.GraduationYear</small><br>
                                        }
                                        @if (degree.DegreeType != null)
                                        {
                                            <span class="badge bg-light text-dark">@degree.DegreeType.DegreeTypeName</span>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }

            <!-- Certificates -->
            @if (Model.Certificates?.Any() == true)
            {
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white border-bottom">
                        <h5 class="mb-0">
                            <i class="bi bi-award me-2 text-primary"></i>Chứng chỉ
                        </h5>
                    </div>
                    <div class="card-body">
                        @foreach (var cert in Model.Certificates.OrderByDescending(c => c.IssueDate))
                        {
                            <div class="certificate-item @(cert != Model.Certificates.OrderByDescending(c => c.IssueDate).Last() ? "border-bottom" : "") pb-3 mb-3">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <div>
                                        <h6 class="mb-1">@cert.CertificateName</h6>
                                        <p class="text-muted mb-0">Cấp bởi: @cert.IssueBy</p>
                                    </div>
                                    <div class="text-end">
                                        <small class="text-muted">
                                            @cert.IssueDate?.ToString("dd/MM/yyyy")
                                            @if (cert.ExpiryDate.HasValue)
                                            {
                                                <br><text>Hết hạn: </text>@cert.ExpiryDate.Value.ToString("dd/MM/yyyy")
                                            }
                                        </small>
                                        @if (cert.CertificateType != null)
                                        {
                                            <br><span class="badge bg-light text-dark">@cert.CertificateType.CertificateTypeName</span>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Skills -->
            @if (Model.UserProfileSkills?.Any() == true)
            {
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white border-bottom">
                        <h5 class="mb-0">
                            <i class="bi bi-gear me-2 text-primary"></i>Kỹ năng
                        </h5>
                    </div>
                    <div class="card-body">
                        @foreach (var skill in Model.UserProfileSkills)
                        {
                            <span class="badge bg-primary me-2 mb-2">
                                @skill.Skill?.SkillName
                                @if (skill.Skill?.SkillType != null)
                                {
                                    <small>(@skill.Skill.SkillType.SkillTypeName)</small>
                                }
                            </span>
                        }
                    </div>
                </div>
            }

            <!-- Professions -->
            @if (Model.UserProfileProfessions?.Any() == true)
            {
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white border-bottom">
                        <h5 class="mb-0">
                            <i class="bi bi-briefcase-fill me-2 text-primary"></i>Ngành nghề quan tâm
                        </h5>
                    </div>
                    <div class="card-body">
                        @foreach (var profession in Model.UserProfileProfessions)
                        {
                            <span class="badge bg-secondary me-2 mb-2">
                                @profession.Profession?.ProfessionName
                                @if (profession.Profession?.Category != null)
                                {
                                    <small>(@profession.Profession.Category.CategoryName)</small>
                                }
                            </span>
                        }
                    </div>
                </div>
            }

            <!-- Contact Info -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white border-bottom">
                    <h5 class="mb-0">
                        <i class="bi bi-person-rolodex me-2 text-primary"></i>Thông tin liên hệ
                    </h5>
                </div>
                <div class="card-body">
                    <div class="contact-info">
                        <p class="mb-2">
                            <i class="bi bi-envelope text-muted me-2"></i>
                            <a href="mailto:@Model.User?.Email" class="text-decoration-none">@Model.User?.Email</a>
                        </p>
                        @if (!string.IsNullOrEmpty(Model.User?.PhoneNumber))
                        {
                            <p class="mb-2">
                                <i class="bi bi-telephone text-muted me-2"></i>
                                <a href="tel:@Model.User.PhoneNumber" class="text-decoration-none">@Model.User.PhoneNumber</a>
                            </p>
                        }
                        <p class="mb-0">
                            <i class="bi bi-geo-alt text-muted me-2"></i>
                            @Model.Location
                        </p>
                    </div>
                </div>
            </div>

            <!-- Back Button -->
            <div class="d-grid">
                <a href="@Url.Action("Index")" class="btn btn-outline-primary">
                    <i class="bi bi-arrow-left me-2"></i>Quay lại trang chủ
                </a>
            </div>
        </div>
    </div>
</div>

<style>
.experience-item:last-child,
.education-item:last-child,
.certificate-item:last-child {
    border-bottom: none !important;
    padding-bottom: 0 !important;
    margin-bottom: 0 !important;
}

.contact-info a {
    color: inherit;
}

.contact-info a:hover {
    color: var(--bs-primary);
}
</style>