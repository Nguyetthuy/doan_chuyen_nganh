@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="auth-container">
    <div class="container">
        <div class="row justify-content-center align-items-center min-vh-100">
            <div class="col-lg-5 col-md-7">
                <div class="auth-card">
                    <div class="text-center mb-4">
                        <div class="auth-logo mb-3">
                            <i class="bi bi-search text-primary" style="font-size: 3rem;"></i>
                        </div>
                        <h2 class="fw-bold mb-2">Chào mừng trở lại!</h2>
                        <p class="text-muted">Đăng nhập để tiếp tục tìm kiếm việc làm</p>
                    </div>

                    <form asp-action="Login" asp-controller="Account" method="post" class="auth-form">
                        <div class="mb-3">
                            <label for="email" class="form-label fw-medium">
                                <i class="bi bi-envelope me-2 text-primary"></i>Email
                            </label>
                            <input type="email" class="form-control form-control-lg" id="email" name="email" 
                                   placeholder="Nhập địa chỉ email của bạn" required />
                        </div>
                        
                        <div class="mb-3">
                            <label for="password" class="form-label fw-medium">
                                <i class="bi bi-lock me-2 text-primary"></i>Mật khẩu
                            </label>
                            <div class="input-group">
                                <input type="password" class="form-control form-control-lg" id="password" name="password" 
                                       placeholder="Nhập mật khẩu" required />
                                <button class="btn btn-outline-secondary" type="button" id="togglePassword">
                                    <i class="bi bi-eye"></i>
                                </button>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="rememberMe" name="rememberMe">
                                <label class="form-check-label text-muted" for="rememberMe">
                                    Ghi nhớ đăng nhập
                                </label>
                            </div>
                            <a href="#" class="text-primary text-decoration-none">Quên mật khẩu?</a>
                        </div>

                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-box-arrow-in-right me-2"></i>Đăng nhập
                            </button>
                        </div>

                        <div class="text-center">
                            <p class="text-muted mb-0">
                                Chưa có tài khoản? 
                                <a class="text-primary text-decoration-none fw-medium" asp-action="Register" asp-controller="Account">
                                    Đăng ký ngay
                                </a>
                            </p>
                        </div>
                    </form>

                    <div class="divider my-4">
                        <span class="divider-text">Hoặc</span>
                    </div>

                    <div class="social-login">
                        <button type="button" class="btn btn-outline-secondary btn-lg w-100 mb-2">
                            <i class="bi bi-google me-2"></i>Đăng nhập với Google
                        </button>
                        <button type="button" class="btn btn-outline-secondary btn-lg w-100">
                            <i class="bi bi-facebook me-2"></i>Đăng nhập với Facebook
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('togglePassword').addEventListener('click', function() {
            const password = document.getElementById('password');
            const icon = this.querySelector('i');
            
            if (password.type === 'password') {
                password.type = 'text';
                icon.classList.remove('bi-eye');
                icon.classList.add('bi-eye-slash');
            } else {
                password.type = 'password';
                icon.classList.remove('bi-eye-slash');
                icon.classList.add('bi-eye');
            }
        });
    </script>
}
