@model IEnumerable<dynamic>

<li class="nav-item dropdown">
    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
        <i class="bi bi-grid-3x3-gap me-1"></i>Nhóm ngành
    </a>
    <ul class="dropdown-menu">
        @if (Model != null && Model.Any())
        {
            @foreach (var item in Model)
            {
                <li>
                    <a class="dropdown-item" 
                       asp-controller="Categories" asp-action="Profiles" asp-route-id="@item.Category.CategoryId" asp-route-categoryName="@item.Category.CategoryName">
                        <i class="bi bi-folder me-2"></i>@item.Category.CategoryName
                        <span class="badge bg-primary rounded-pill ms-2">@item.ApprovedProfileCount</span>
                    </a>
                </li>
                
                @if (item != Model.Last())
                {
                    <li><hr class="dropdown-divider"></li>
                }
            }
        }
        else
        {
            <li>
                <span class="dropdown-item-text text-muted">
                    <i class="bi bi-info-circle me-2"></i>Chưa có hồ sơ được duyệt
                </span>
            </li>
        }
        <li><hr class="dropdown-divider"></li>
        <li>
            <a class="dropdown-item text-primary" asp-controller="Categories" asp-action="Index">
                <i class="bi bi-list-ul me-2"></i>Xem tất cả nhóm ngành
            </a>
        </li>
    </ul>
</li>