@model List<finder_work.Models.UserProfile>
@{
    ViewData["Title"] = "Danh sách hồ sơ";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-user-circle"></i> Danh sách hồ sơ của tôi</h2>
                <div>
                    <a href="@Url.Action("Create")" class="btn btn-success">
                        <i class="fas fa-plus"></i> Tạo hồ sơ mới
                    </a>
                </div>
            </div>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["Warning"] != null)
            {
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    @TempData["Warning"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (Model == null || !Model.Any())
            {
                <div class="card">
                    <div class="card-body text-center py-5">
                        <i class="fas fa-user-plus fa-3x text-muted mb-3"></i>
                        <h4>Chưa có hồ sơ nào</h4>
                        <p class="text-muted mb-4">Bạn chưa tạo hồ sơ nào. Hãy tạo hồ sơ đầu tiên để bắt đầu.</p>
                        <a href="@Url.Action("Create")" class="btn btn-primary">
                            <i class="fas fa-plus"></i> Tạo hồ sơ đầu tiên
                        </a>
                    </div>
                </div>
            }
            else
            {
                <div class="row">
                    @foreach (var profile in Model)
                    {
                        <div class="col-md-6 col-lg-4 mb-4">
                            <div class="card h-100 shadow-sm">
                                <div class="card-header bg-primary text-white">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <h6 class="mb-0">
                                            <i class="fas fa-id-card"></i> 
                                            Hồ sơ #@profile.ProfileId
                                        </h6>
                                        <span class="badge @(profile.ApprovalStatus == "Approved" ? "bg-success" : profile.ApprovalStatus == "Rejected" ? "bg-danger" : "bg-warning")">
                                            @(profile.ApprovalStatus == "Approved" ? "Đã duyệt" : profile.ApprovalStatus == "Rejected" ? "Bị từ chối" : "Chờ duyệt")
                                        </span>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <div class="text-center mb-3">
                                        @if (!string.IsNullOrEmpty(profile.User?.Avata))
                                        {
                                            <img src="@profile.User.Avata" alt="Avatar" class="rounded-circle" style="width: 60px; height: 60px; object-fit: cover;">
                                        }
                                        else
                                        {
                                            <div class="rounded-circle bg-secondary d-inline-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                                                <i class="fas fa-user text-white"></i>
                                            </div>
                                        }
                                    </div>
                                    
                                    <h6 class="card-title text-center">@(profile.User?.FullName ?? "Tên không có")</h6>
                                    
                                    <div class="mb-2">
                                        <small class="text-muted">
                                            <i class="fas fa-map-marker-alt"></i> @(profile.Location ?? "Chưa cập nhật")
                                        </small>
                                    </div>
                                    
                                    @if (profile.ExpectedSalary.HasValue)
                                    {
                                        <div class="mb-2">
                                            <small class="text-muted">
                                                <i class="fas fa-money-bill-wave"></i> @profile.ExpectedSalary.Value.ToString("N0") VND
                                            </small>
                                        </div>
                                    }
                                    
                                    <div class="mb-2">
                                        <small class="text-muted">
                                            <i class="fas fa-calendar"></i> Tạo: @profile.CreatedDate.ToString("dd/MM/yyyy")
                                        </small>
                                    </div>

                                    @if (profile.UserProfileProfessions?.Any() == true)
                                    {
                                        <div class="mb-3">
                                            @foreach (var profession in profile.UserProfileProfessions.Take(2))
                                            {
                                                <span class="badge bg-info me-1">@profession.Profession?.ProfessionName</span>
                                            }
                                            @if (profile.UserProfileProfessions.Count > 2)
                                            {
                                                <span class="badge bg-secondary">+@(profile.UserProfileProfessions.Count - 2)</span>
                                            }
                                        </div>
                                    }

                                    @if (!string.IsNullOrEmpty(profile.Summary))
                                    {
                                        <p class="card-text small text-muted">
                                            @(profile.Summary.Length > 100 ? profile.Summary.Substring(0, 100) + "..." : profile.Summary)
                                        </p>
                                    }

                                    @if (profile.ApprovalStatus == "Rejected" && !string.IsNullOrEmpty(profile.RejectionReason))
                                    {
                                        <div class="alert alert-danger alert-sm">
                                            <small><strong>Lý do từ chối:</strong> @profile.RejectionReason</small>
                                        </div>
                                    }
                                </div>
                                <div class="card-footer bg-light">
                                    <div class="btn-group w-100" role="group">
                                        <a href="@Url.Action("Details", new { id = profile.ProfileId })" class="btn btn-outline-primary btn-sm">
                                            <i class="fas fa-eye"></i> Xem
                                        </a>
                                        <a href="@Url.Action("CVView", new { id = profile.ProfileId })" class="btn btn-outline-success btn-sm" target="_blank">
                                            <i class="fas fa-file-alt"></i> CV
                                        </a>
                                        <a href="@Url.Action("Edit", new { id = profile.ProfileId })" class="btn btn-outline-warning btn-sm">
                                            <i class="fas fa-edit"></i> Sửa
                                        </a>
                                        <button type="button" class="btn btn-outline-danger btn-sm" onclick="confirmDelete(@profile.ProfileId, '@profile.User?.FullName')">
                                            <i class="fas fa-trash"></i> Xóa
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <!-- Thống kê -->
                <div class="row mt-4">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-body">
                                <h6 class="card-title">
                                    <i class="fas fa-chart-pie"></i> Thống kê hồ sơ
                                </h6>
                                <div class="row text-center">
                                    <div class="col-md-3">
                                        <div class="border-end">
                                            <h4 class="text-primary">@Model.Count</h4>
                                            <small class="text-muted">Tổng hồ sơ</small>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="border-end">
                                            <h4 class="text-success">@Model.Count(p => p.ApprovalStatus == "Approved")</h4>
                                            <small class="text-muted">Đã duyệt</small>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="border-end">
                                            <h4 class="text-warning">@Model.Count(p => p.ApprovalStatus == "Pending")</h4>
                                            <small class="text-muted">Chờ duyệt</small>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <h4 class="text-danger">@Model.Count(p => p.ApprovalStatus == "Rejected")</h4>
                                        <small class="text-muted">Bị từ chối</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteModalLabel">
                    <i class="fas fa-exclamation-triangle"></i> Xác nhận xóa hồ sơ
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="text-center">
                    <i class="fas fa-trash-alt fa-3x text-danger mb-3"></i>
                    <h5>Bạn có chắc chắn muốn xóa hồ sơ này?</h5>
                    <p class="text-muted mb-3">
                        Hồ sơ <strong id="profileInfo"></strong> sẽ bị xóa vĩnh viễn và không thể khôi phục.
                    </p>
                    <div class="alert alert-warning">
                        <small>
                            <i class="fas fa-info-circle"></i>
                            Tất cả thông tin liên quan (kỹ năng, kinh nghiệm, học vấn, chứng chỉ) cũng sẽ bị xóa.
                        </small>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times"></i> Hủy bỏ
                </button>
                <form id="deleteForm" method="post" style="display: inline;">
                    @Html.AntiForgeryToken()
                    <input type="hidden" id="deleteProfileId" name="id" value="" />
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Xóa hồ sơ
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
function confirmDelete(profileId, fullName) {
    document.getElementById('profileInfo').textContent = `#${profileId} - ${fullName || 'Không có tên'}`;
    document.getElementById('deleteForm').action = `@Url.Action("Delete", "Profile")`;
    document.getElementById('deleteProfileId').value = profileId;
    
    var deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'));
    deleteModal.show();
}
</script>

<style>
    .alert-sm {
        padding: 0.375rem 0.75rem;
        margin-bottom: 0.5rem;
        font-size: 0.875rem;
    }
    
    .card {
        transition: transform 0.2s;
    }
    
    .card:hover {
        transform: translateY(-2px);
    }
    
    .btn-group .btn {
        flex: 1;
    }
    
    .border-end {
        border-right: 1px solid #dee2e6;
    }
    
    @@media (max-width: 768px) {
        .border-end {
            border-right: none;
            border-bottom: 1px solid #dee2e6;
            margin-bottom: 1rem;
            padding-bottom: 1rem;
        }
        
        .border-end:last-child {
            border-bottom: none;
            margin-bottom: 0;
            padding-bottom: 0;
        }
    }
</style>