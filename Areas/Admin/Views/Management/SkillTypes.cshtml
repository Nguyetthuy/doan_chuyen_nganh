@model IEnumerable<finder_work.Models.SkillType>
@section Sidebar { @await Html.PartialAsync("_AdminSidebar") }

<div class="container-fluid">
    <h2>Quản lý loại kỹ năng</h2>
    
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Add New Skill Type Form -->
    <div class="card mb-4">
        <div class="card-header">
            <h5>Thêm loại kỹ năng mới</h5>
        </div>
        <div class="card-body">
            <form action="/Admin/Management/CreateSkillType" method="post">
                <div class="row">
                    <div class="col-md-8">
                        <div class="mb-3">
                            <label for="skillTypeName" class="form-label">Tên loại kỹ năng</label>
                            <input type="text" class="form-control" id="skillTypeName" name="skillTypeName" required>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label class="form-label">&nbsp;</label>
                            <button type="submit" class="btn btn-primary d-block">Thêm loại kỹ năng</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Skill Types List -->
    <div class="card">
        <div class="card-header">
            <h5>Danh sách loại kỹ năng</h5>
        </div>
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Tên loại kỹ năng</th>
                                <th>Số lượng kỹ năng</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var skillType in Model)
                            {
                                <tr>
                                    <td>@skillType.SkillTypeId</td>
                                    <td>@skillType.SkillTypeName</td>
                                    <td>@skillType.Skills.Count</td>
                                    <td>
                                        <button type="button" class="btn btn-sm btn-warning me-1" 
                                                data-bs-toggle="modal" 
                                                data-bs-target="#editModal@(skillType.SkillTypeId)">
                                            <i class="fas fa-edit"></i> Sửa
                                        </button>
                                        <button type="button" class="btn btn-sm btn-danger" 
                                                data-bs-toggle="modal" 
                                                data-bs-target="#deleteModal@(skillType.SkillTypeId)">
                                            <i class="fas fa-trash"></i> Xóa
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-4">
                    <p class="text-muted">Chưa có loại kỹ năng nào được tạo.</p>
                </div>
            }
        </div>
    </div>
</div>

<!-- Edit and Delete Modals -->
@if (Model != null && Model.Any())
{
    @foreach (var skillType in Model)
    {
        <!-- Edit Modal -->
        <div class="modal fade" id="editModal@(skillType.SkillTypeId)" tabindex="-1" aria-labelledby="editModalLabel@(skillType.SkillTypeId)" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="editModalLabel@(skillType.SkillTypeId)">Sửa loại kỹ năng</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <form action="/Admin/Management/UpdateSkillType" method="post">
                        <div class="modal-body">
                            <input type="hidden" name="skillTypeId" value="@skillType.SkillTypeId" />
                            <div class="mb-3">
                                <label for="skillTypeName@(skillType.SkillTypeId)" class="form-label">Tên loại kỹ năng</label>
                                <input type="text" class="form-control" id="skillTypeName@(skillType.SkillTypeId)" 
                                       name="skillTypeName" value="@skillType.SkillTypeName" required>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                            <button type="submit" class="btn btn-primary">Cập nhật</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Delete Modal -->
        <div class="modal fade" id="deleteModal@(skillType.SkillTypeId)" tabindex="-1" aria-labelledby="deleteModalLabel@(skillType.SkillTypeId)" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="deleteModalLabel@(skillType.SkillTypeId)">Xác nhận xóa</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <p>Bạn có chắc chắn muốn xóa loại kỹ năng "<strong>@skillType.SkillTypeName</strong>" không?</p>
                        @if (skillType.Skills.Count > 0)
                        {
                            <div class="alert alert-warning">
                                <i class="fas fa-exclamation-triangle"></i>
                                Loại kỹ năng này có <strong>@skillType.Skills.Count</strong> kỹ năng liên quan. 
                                Bạn cần xóa các kỹ năng trước khi xóa loại kỹ năng này.
                            </div>
                        }
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                        @if (skillType.Skills.Count == 0)
                        {
                            <form action="/Admin/Management/DeleteSkillType" method="post" style="display: inline;">
                                <input type="hidden" name="skillTypeId" value="@skillType.SkillTypeId" />
                                <button type="submit" class="btn btn-danger">Xóa</button>
                            </form>
                        }
                        else
                        {
                            <button type="button" class="btn btn-danger" disabled>Không thể xóa</button>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
}