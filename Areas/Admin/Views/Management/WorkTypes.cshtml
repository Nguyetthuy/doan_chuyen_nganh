@model IEnumerable<finder_work.Models.WorkType>
@section Sidebar { @await Html.PartialAsync("_AdminSidebar") }

<div class="container-fluid">
    <h2>Quản lý loại hình công việc</h2>
    
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Add New Work Type Form -->
    <div class="card mb-4">
        <div class="card-header">
            <h5>Thêm loại hình công việc mới</h5>
        </div>
        <div class="card-body">
            <form action="/Admin/Management/CreateWorkType" method="post">
                <div class="row">
                    <div class="col-md-8">
                        <div class="mb-3">
                            <label for="workTypeName" class="form-label">Tên loại hình công việc</label>
                            <input type="text" class="form-control" id="workTypeName" name="workTypeName" required>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label class="form-label">&nbsp;</label>
                            <button type="submit" class="btn btn-primary d-block">Thêm loại hình công việc</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Work Types List -->
    <div class="card">
        <div class="card-header">
            <h5>Danh sách loại hình công việc</h5>
        </div>
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Tên loại hình công việc</th>
                                <th>Số lượng kinh nghiệm</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var workType in Model)
                            {
                                <tr>
                                    <td>@workType.WorkTypeId</td>
                                    <td>@workType.WorkTypeName</td>
                                    <td>@workType.WorkExperiences.Count</td>
                                    <td>
                                        <button type="button" class="btn btn-sm btn-warning me-1" 
                                                data-bs-toggle="modal" 
                                                data-bs-target="#editModal@(workType.WorkTypeId)">
                                            <i class="fas fa-edit"></i> Sửa
                                        </button>
                                        <button type="button" class="btn btn-sm btn-danger" 
                                                data-bs-toggle="modal" 
                                                data-bs-target="#deleteModal@(workType.WorkTypeId)">
                                            <i class="fas fa-trash"></i> Xóa
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-4">
                    <p class="text-muted">Chưa có loại hình công việc nào được tạo.</p>
                </div>
            }
        </div>
    </div>
</div>

<!-- Edit and Delete Modals -->
@if (Model != null && Model.Any())
{
    @foreach (var workType in Model)
    {
        <!-- Edit Modal -->
        <div class="modal fade" id="editModal@(workType.WorkTypeId)" tabindex="-1" aria-labelledby="editModalLabel@(workType.WorkTypeId)" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="editModalLabel@(workType.WorkTypeId)">Sửa loại hình công việc</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <form action="/Admin/Management/UpdateWorkType" method="post">
                        <div class="modal-body">
                            <input type="hidden" name="workTypeId" value="@workType.WorkTypeId" />
                            <div class="mb-3">
                                <label for="workTypeName@(workType.WorkTypeId)" class="form-label">Tên loại hình công việc</label>
                                <input type="text" class="form-control" id="workTypeName@(workType.WorkTypeId)" 
                                       name="workTypeName" value="@workType.WorkTypeName" required>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                            <button type="submit" class="btn btn-primary">Cập nhật</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Delete Modal -->
        <div class="modal fade" id="deleteModal@(workType.WorkTypeId)" tabindex="-1" aria-labelledby="deleteModalLabel@(workType.WorkTypeId)" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="deleteModalLabel@(workType.WorkTypeId)">Xác nhận xóa</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <p>Bạn có chắc chắn muốn xóa loại hình công việc "<strong>@workType.WorkTypeName</strong>" không?</p>
                        @if (workType.WorkExperiences.Count > 0)
                        {
                            <div class="alert alert-warning">
                                <i class="fas fa-exclamation-triangle"></i>
                                Loại hình công việc này có <strong>@workType.WorkExperiences.Count</strong> kinh nghiệm liên quan. 
                                Bạn cần xóa các kinh nghiệm trước khi xóa loại hình công việc này.
                            </div>
                        }
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                        @if (workType.WorkExperiences.Count == 0)
                        {
                            <form action="/Admin/Management/DeleteWorkType" method="post" style="display: inline;">
                                <input type="hidden" name="workTypeId" value="@workType.WorkTypeId" />
                                <button type="submit" class="btn btn-danger">Xóa</button>
                            </form>
                        }
                        else
                        {
                            <button type="button" class="btn btn-danger" disabled>Không thể xóa</button>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
}