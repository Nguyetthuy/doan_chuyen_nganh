@model IEnumerable<finder_work.Models.WorkExperience>
@section Sidebar { @await Html.PartialAsync("_AdminSidebar") }

<div class="container-fluid">
    <h2>Quản lý kinh nghiệm làm việc</h2>
    
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-header">
            <h5>Danh sách kinh nghiệm làm việc</h5>
        </div>
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Người dùng</th>
                                <th>Công ty</th>
                                <th>Vị trí</th>
                                <th>Loại công việc</th>
                                <th>Thời gian</th>
                                <th>Mô tả</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var experience in Model)
                            {
                                <tr>
                                    <td>@experience.Profile?.User?.FullName</td>
                                    <td>@experience.CompanyName</td>
                                    <td>@experience.WorkName</td>
                                    <td>@experience.WorkType?.WorkTypeName</td>
                                    <td>
                                        @if (experience.StartDate.HasValue)
                                        {
                                            @experience.StartDate.Value.ToString("MM/yyyy")
                                        }
                                        -
                                        @if (experience.EndDate.HasValue)
                                        {
                                            @experience.EndDate.Value.ToString("MM/yyyy")
                                        }
                                        else
                                        {
                                            <span class="text-success">Hiện tại</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(experience.WorkDescription))
                                        {
                                            @(experience.WorkDescription.Length > 50 ? 
                                              experience.WorkDescription.Substring(0, 50) + "..." : 
                                              experience.WorkDescription)
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-4">
                    <p class="text-muted">Chưa có kinh nghiệm làm việc nào được ghi nhận.</p>
                </div>
            }
        </div>
    </div>
</div>
