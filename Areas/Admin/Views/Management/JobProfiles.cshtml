@model IEnumerable<finder_work.Models.UserProfile>
@section Sidebar { @await Html.PartialAsync("_AdminSidebar") }

@{
    ViewData["Title"] = "Quản lý hồ sơ người tìm việc";
    var totalProfiles = ViewBag.TotalProfiles ?? 0;
    var approvedProfiles = ViewBag.ApprovedProfiles ?? 0;
    var pendingProfiles = ViewBag.PendingProfiles ?? 0;
    var rejectedProfiles = ViewBag.RejectedProfiles ?? 0;
    var profilesByCategory = ViewBag.ProfilesByCategory as IEnumerable<dynamic> ?? new List<dynamic>();
    var profilesByLocation = ViewBag.ProfilesByLocation as IEnumerable<dynamic> ?? new List<dynamic>();
    var averageSalary = ViewBag.AverageSalary ?? 0;
    var minSalary = ViewBag.MinSalary ?? 0;
    var maxSalary = ViewBag.MaxSalary ?? 0;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-person-workspace me-2"></i>Quản lý hồ sơ người tìm việc</h2>
        <div class="d-flex gap-2">
            <form asp-action="SendTestNotification" method="post" class="d-inline">
                <button type="submit" class="btn btn-warning btn-sm" onclick="return confirm('Gửi thông báo test đến tất cả người dùng?')">
                    <i class="bi bi-bell me-2"></i>Test thông báo
                </button>
            </form>
            <a href="@Url.Action("JobSeekerStats", "Management", new { area = "Admin" })" class="btn btn-info">
                <i class="bi bi-graph-up me-2"></i>Xem thống kê chi tiết
            </a>
        </div>
    </div>
    
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Tổng số hồ sơ
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@totalProfiles</div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-file-person text-primary" style="font-size: 2rem;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Đã duyệt
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@approvedProfiles</div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-check-circle text-success" style="font-size: 2rem;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Chờ duyệt
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@pendingProfiles</div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-clock text-warning" style="font-size: 2rem;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-danger shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">
                                Bị từ chối
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@rejectedProfiles</div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-x-circle text-danger" style="font-size: 2rem;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts Row -->
    <div class="row mb-4">
        <!-- Top Categories Chart -->
        <div class="col-xl-6 col-lg-6">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Top 5 Ngành nghề</h6>
                </div>
                <div class="card-body">
                    @if (profilesByCategory.Any())
                    {
                        @foreach (var item in profilesByCategory)
                        {
                            <div class="mb-3">
                                <div class="d-flex justify-content-between">
                                    <span>@item.Category</span>
                                    <span class="badge bg-primary">@item.Count</span>
                                </div>
                                <div class="progress mt-1" style="height: 8px;">
                                    <div class="progress-bar bg-primary" role="progressbar" 
                                         style="width: @(((double)item.Count / approvedProfiles) * 100)%"></div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted">Chưa có dữ liệu</p>
                    }
                </div>
            </div>
        </div>

        <!-- Top Locations Chart -->
        <div class="col-xl-6 col-lg-6">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Top 5 Địa điểm</h6>
                </div>
                <div class="card-body">
                    @if (profilesByLocation.Any())
                    {
                        @foreach (var item in profilesByLocation)
                        {
                            <div class="mb-3">
                                <div class="d-flex justify-content-between">
                                    <span>@item.Location</span>
                                    <span class="badge bg-info">@item.Count</span>
                                </div>
                                <div class="progress mt-1" style="height: 8px;">
                                    <div class="progress-bar bg-info" role="progressbar" 
                                         style="width: @(((double)item.Count / approvedProfiles) * 100)%"></div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted">Chưa có dữ liệu</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Salary Statistics -->
    @if (averageSalary > 0)
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="card shadow">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Thống kê mức lương</h6>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4 text-center">
                                <h5 class="text-success">@averageSalary.ToString("N0") VND</h5>
                                <small class="text-muted">Lương trung bình</small>
                            </div>
                            <div class="col-md-4 text-center">
                                <h5 class="text-info">@minSalary.ToString("N0") VND</h5>
                                <small class="text-muted">Lương thấp nhất</small>
                            </div>
                            <div class="col-md-4 text-center">
                                <h5 class="text-warning">@maxSalary.ToString("N0") VND</h5>
                                <small class="text-muted">Lương cao nhất</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Recent Profiles -->
    <div class="card shadow">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Hồ sơ gần đây</h6>
        </div>
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Họ tên</th>
                                <th>Ngành nghề</th>
                                <th>Địa điểm</th>
                                <th>Mức lương</th>
                                <th>Trạng thái</th>
                                <th>Cập nhật</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var profile in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            @if (!string.IsNullOrEmpty(profile.User?.Avata))
                                            {
                                                <img src="@profile.User.Avata" alt="@profile.User.FullName" 
                                                     class="rounded-circle me-2" width="40" height="40" style="object-fit: cover;">
                                            }
                                            else
                                            {
                                                <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center text-white me-2" 
                                                     style="width: 40px; height: 40px; font-size: 1rem;">
                                                    @(profile.User?.FullName?.FirstOrDefault().ToString().ToUpper() ?? "U")
                                                </div>
                                            }
                                            <div>
                                                <strong>@profile.User?.FullName</strong>
                                                <br><small class="text-muted">@profile.User?.Email</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        @if (profile.UserProfileProfessions?.Any() == true)
                                        {
                                            @foreach (var profession in profile.UserProfileProfessions.Take(2))
                                            {
                                                <span class="badge bg-secondary me-1">@profession.Profession?.ProfessionName</span>
                                            }
                                            @if (profile.UserProfileProfessions.Count() > 2)
                                            {
                                                <span class="badge bg-light text-dark">+@(profile.UserProfileProfessions.Count() - 2)</span>
                                            }
                                        }
                                    </td>
                                    <td>@profile.Location</td>
                                    <td>
                                        @if (profile.ExpectedSalary.HasValue)
                                        {
                                            <span class="text-success fw-bold">@profile.ExpectedSalary.Value.ToString("N0") VND</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Chưa cập nhật</span>
                                        }
                                    </td>
                                    <td>
                                        @switch (profile.ApprovalStatus)
                                        {
                                            case "Approved":
                                                <span class="badge bg-success">Đã duyệt</span>
                                                break;
                                            case "Pending":
                                                <span class="badge bg-warning">Chờ duyệt</span>
                                                break;
                                            case "Rejected":
                                                <span class="badge bg-danger">Bị từ chối</span>
                                                break;
                                            default:
                                                <span class="badge bg-secondary">@profile.ApprovalStatus</span>
                                                break;
                                        }
                                    </td>
                                    <td>
                                        <small>@profile.UpdatedDate.ToString("dd/MM/yyyy HH:mm")</small>
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="@Url.Action("ProfileDetail", "Management", new { area = "Admin", id = profile.ProfileId })" 
                                               class="btn btn-sm btn-outline-primary" title="Xem chi tiết">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            @if (profile.ApprovalStatus == "Pending")
                                            {
                                                <form asp-action="ApproveProfile" method="post" class="d-inline">
                                                    <input type="hidden" name="profileId" value="@profile.ProfileId" />
                                                    <button type="submit" class="btn btn-sm btn-success" title="Duyệt">
                                                        <i class="bi bi-check"></i>
                                                    </button>
                                                </form>
                                                <button type="button" class="btn btn-sm btn-danger" title="Từ chối"
                                                        data-bs-toggle="modal" data-bs-target="#rejectModal" 
                                                        data-profile-id="@profile.ProfileId" 
                                                        data-profile-name="@profile.User?.FullName">
                                                    <i class="bi bi-x"></i>
                                                </button>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-4">
                    <i class="bi bi-person-x display-1 text-muted"></i>
                    <h4 class="text-muted">Chưa có hồ sơ nào</h4>
                    <p class="text-muted">Hồ sơ của người tìm việc sẽ hiển thị ở đây.</p>
                </div>
            }
        </div>
    </div>
</div>

<!-- Reject Modal -->
<div class="modal fade" id="rejectModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Từ chối hồ sơ</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="RejectProfile" method="post">
                <div class="modal-body">
                    <input type="hidden" name="profileId" id="rejectProfileId" />
                    <p>Bạn có chắc chắn muốn từ chối hồ sơ của <strong id="rejectProfileName"></strong>?</p>
                    <div class="mb-3">
                        <label for="rejectionReason" class="form-label">Lý do từ chối:</label>
                        <textarea class="form-control" name="rejectionReason" id="rejectionReason" rows="3" 
                                  placeholder="Nhập lý do từ chối hồ sơ..."></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-danger">Từ chối</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
<script>
document.addEventListener('DOMContentLoaded', function() {
    var rejectModal = document.getElementById('rejectModal');
    rejectModal.addEventListener('show.bs.modal', function (event) {
        var button = event.relatedTarget;
        var profileId = button.getAttribute('data-profile-id');
        var profileName = button.getAttribute('data-profile-name');
        
        document.getElementById('rejectProfileId').value = profileId;
        document.getElementById('rejectProfileName').textContent = profileName;
    });
});
</script>
}

<style>
.border-left-primary {
    border-left: 0.25rem solid #4e73df !important;
}

.border-left-success {
    border-left: 0.25rem solid #1cc88a !important;
}

.border-left-warning {
    border-left: 0.25rem solid #f6c23e !important;
}

.border-left-danger {
    border-left: 0.25rem solid #e74a3b !important;
}

.text-xs {
    font-size: 0.7rem;
}

.font-weight-bold {
    font-weight: 700 !important;
}

.text-gray-800 {
    color: #5a5c69 !important;
}
</style>